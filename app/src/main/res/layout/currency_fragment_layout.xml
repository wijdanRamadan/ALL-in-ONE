<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_margin="@dimen/space_between_content_large"
    android:padding="@dimen/space_between_content_large">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dolar"
        android:layout_gravity="center"
        android:padding="@dimen/space_between_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardBackgroundColor="#cc003f5c"
        app:cardCornerRadius="@dimen/space_between_content_large">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lira"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_between_content_large"
                    android:drawableStart="@drawable/turkeyflag128"
                    android:drawableLeft="@drawable/turkeyflag128"
                    android:drawablePadding="128dp"
                    android:padding="@dimen/space_between_content_large"
                    android:text="1234"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/euro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_between_content_large"
                    android:drawableStart="@drawable/europeanunion"
                    android:drawableLeft="@drawable/europeanunion"
                    android:drawablePadding="128dp"
                    android:padding="@dimen/space_between_content_large"
                    android:text="1234"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/uk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_between_content_large"
                    android:drawableStart="@drawable/unitedkingdomflag"
                    android:drawableLeft="@drawable/unitedkingdomflag"
                    android:drawablePadding="128dp"
                    android:padding="@dimen/space_between_content_large"
                    android:text="1234"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/poland"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_between_content_large"
                    android:drawableStart="@drawable/polandflag"
                    android:drawableLeft="@drawable/polandflag"
                    android:drawablePadding="128dp"
                    android:padding="@dimen/space_between_content_large"
                    android:text="1234"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/armenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_between_content_large"
                    android:drawableStart="@drawable/armeniaflag"
                    android:drawableLeft="@drawable/armeniaflag"
                    android:drawablePadding="128dp"
                    android:padding="@dimen/space_between_content_large"
                    android:text="1234"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_between_content_large"
    android:layout_margin="@dimen/space_between_content_large"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:src="@drawable/sunny256"
        android:paddingBottom="@dimen/space_between_content_large"
        android:layout_marginBottom="@dimen/space_between_content_large"
        android:contentDescription="TODO" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#cc003f5c"
        app:cardCornerRadius="@dimen/space_between_content_large"
        android:paddingTop="@dimen/space_between_content_large">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/space_between_content_large"
            android:padding="@dimen/space_between_content_large">

            <TextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="istanbul"
                android:padding="@dimen/space_between_content_large"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/city_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="20 C"
                android:padding="@dimen/space_between_content_large"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
</FrameLayout>